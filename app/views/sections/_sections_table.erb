<table>
  <thead>
  <tr>
    <th><b>Section</b></th>
    <th>Subject</th>
    <th>Teacher</th>
    <th>Room</th>
    <th>Schedule</th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% sections.each do |section| %>
    <tr>
      <td><%= section.name %></td>
      <td><%= section.subject.name %></td>
      <td><%= section.teacher.first_and_last_name %></td>
      <td><%= section.classroom.number %></td>
      <td>

        <table>
          <thead>
          <tr>
            <th>Week day</th>
            <th>Starts</th>
            <th>Duration</th>

            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% section.section_schedules.each do |schedule| %>
            <tr>
              <td><%= schedule.week_day || 'Everyday' %></td>
              <td><%= schedule.start_at_humanized %></td>
              <td><%= schedule.duration %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

      </td>

    </tr>
  <% end %>
  </tbody>
</table>
<br>